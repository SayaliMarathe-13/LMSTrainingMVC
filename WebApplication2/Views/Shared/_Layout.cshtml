<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Library Management System</title>

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Bootstrap-select -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/css/bootstrap-select.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/bootstrap-select.min.js"></script>

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Optional: Your own styles -->
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

    <style>
        /* Sidebar */
        .sidebar {
            height: 100%;
            width: 250px;
            position: fixed;
            top: 0;
            left: -250px;
            background-color: #333;
            padding-top: 60px;
            transition: 0.3s;
            z-index: 999;
        }

            .sidebar a {
                padding: 10px 20px;
                text-decoration: none;
                font-size: 16px;
                color: white;
                display: block;
                transition: 0.3s;
            }

                .sidebar a:hover {
                    background-color: #575757;
                }

        .hamburger {
            font-size: 24px;
            cursor: pointer;
            margin-right: 20px;
        }

        /* Existing styles */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .navbar {
            background-color: #333;
            color: white;
            padding: 15px 20px;
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 1000;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
        }

        .nav-links {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .navbar .logo {
            font-size: 20px;
            font-weight: bold;
            display: flex;
            align-items: center;
        }

        .navbar .nav-links a {
            color: white;
            text-decoration: none;
            margin: 0 15px;
            font-size: 16px;
            transition: 0.3s;
            padding: 5px 10px;
        }

            .navbar .nav-links a:hover {
                color: #007bff;
            }

        .container {
            width: 80%;
            margin: 120px auto 50px auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .footer {
            margin-top: 20px;
            color: #777;
            text-align: center;
            padding: 10px;
            background: #fff;
            border-top: 1px solid #ddd;
        }
    </style>
</head>
<body>

    <!-- Sidebar -->
    <div id="sidebar" class="sidebar">
        <a href="@Url.Action("Index", "Home")">📊 Dashboard</a>
        <a href="@Url.Action("List", "Books")">📚 Books</a>
        <a href="@Url.Action("Index", "Members")">👤 Members</a>
        <a href="@Url.Action("IssueBooksList", "Books")">📖 Issue Books</a>
        <a href="@Url.Action("Return", "Borrowing")">↩️ Return Books</a>
        <a href="@Url.Action("FineDetails", "Fines")">💰 Fine Details</a>
        <a href="@Url.Action("Index", "Suppliers")">🚚 Suppliers</a>
    </div>

    <!-- Top Navbar -->
    <div class="navbar">
        <div class="logo">
            <span class="hamburger" onclick="toggleSidebar()">☰</span>
            📚 Library Management System
        </div>
        <div class="nav-links">
            <a href="@Url.Action("Index", "Home")">🏠 Home</a>
            <a href="@Url.Action("AboutUs", "Home")">ℹ️ About Us</a>
            <a href="@Url.Action("Contact", "Home")">📞 Contact</a>
            <a href="#">🔑 Login</a>
        </div>
    </div>

    <!-- Page Content -->
    <div class="container body-content">
        @RenderBody()
    </div>

    @RenderSection("Scripts", required: false)

    <script>
        function toggleSidebar() {
            var sidebar = document.getElementById("sidebar");
            sidebar.style.left = (sidebar.style.left === "0px") ? "-250px" : "0px";
        }
    </script>

</body>
</html>
