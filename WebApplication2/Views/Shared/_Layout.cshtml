<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title - Library Management System</title>
    <!-- jQuery (already added by you) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- Bootstrap CSS (if using Bootstrap styles) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" />

    <!-- Bootstrap JS (optional if not already loaded) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Bootstrap-select CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/css/bootstrap-select.min.css" />

    <!-- Bootstrap-select JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-select@1.14.0-beta3/dist/js/bootstrap-select.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Optional: Your own styles (local or hosted) -->
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

</head>
<body>

    <div class="navbar">
        <div class="logo">📚 Library Management System</div>
        <div class="nav-links">
            <a href="@Url.Action("Index", "Home")">🏠 Home</a>
            <a href="@Url.Action("AboutUs", "Home")">ℹ️ About Us</a>
            <a href="@Url.Action("Contact", "Home")">📞 Contact</a>
            <a href="#">🔑 Login</a>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>

    @*<footer class="footer">
        <p>&copy; @DateTime.Now.Year - Library Management System</p>
        </footer>*@

    <!-- jQuery + Bootstrap JS (Latest versions) -->


    <!-- Render additional view-specific scripts -->
    @RenderSection("Scripts", required: false)

    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            margin: 0;
            padding: 0;
        }

        .navbar {
            background-color: #333;
            color: white;
            padding: 15px 20px;
            position: fixed;
            width: 100%;
            top: 0;
            left: 0;
            z-index: 1000;
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
        }

        .nav-links {
            display: flex;
            gap: 15px;
            flex-wrap: wrap;
        }

        .navbar .logo {
            font-size: 20px;
            font-weight: bold;
        }

        .navbar .nav-links a {
            color: white;
            text-decoration: none;
            margin: 0 15px;
            font-size: 16px;
            transition: 0.3s;
            padding: 5px 10px;
        }

            .navbar .nav-links a:hover {
                color: #007bff;
            }

        .container {
            width: 80%;
            margin: 120px auto 50px auto;
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
        }

        .footer {
            margin-top: 20px;
            color: #777;
            text-align: center;
            padding: 10px;
            background: #fff;
            border-top: 1px solid #ddd;
        }
    </style>
</body>
</html>
