@{
    ViewBag.Title = "Error";
    Layout = null; 
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Error</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f2f2f2;
            margin: 0;
            padding: 0;
        }

        .error-container {
            max-width: 600px;
            margin: 100px auto;
            background: white;
            border: 2px solid #ff4d4d;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
            padding: 30px;
            text-align: center;
        }

        .error-title {
            color: #d9534f;
            font-size: 28px;
            margin-bottom: 10px;
        }

        .error-message {
            color: #333;
            font-size: 18px;
            margin-bottom: 20px;
        }

        .back-btn {
            display: inline-block;
            text-decoration: none;
            padding: 10px 20px;
            background-color: #d9534f;
            color: white;
            border-radius: 4px;
            transition: background-color 0.3s ease;
        }

            .back-btn:hover {
                background-color: #c9302c;
            }
    </style>
</head>
<body>
    <div class="error-container">
        <div class="error-title">⚠️ Something Went Wrong</div>
        <div class="error-message">
          @(ViewBag.ErrorMessage ?? "An unexpected error occurred. Please try again later.")

        </div>
        <a href="@Url.Action("Index", "Home")" class="back-btn">⬅ Back to Home</a>
    </div>
</body>
</html>
